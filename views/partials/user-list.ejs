<!-- begin: user-list -->
   		  <ul class="nav navbar-nav">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="javascript: void(0)">Site Members <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li class="dropdown">
                <a class="dropdown-toggle dropdown-submenu dropdown-submenu-close" data-toggle="dropdown" href="#">Users</a>
                <ul class="dropdown-menu"><%
users.forEach(function(user) {
  if (!user.is_admin && !user.is_suspended) { %>
                  <li class=""><a href="/user/<%= user._id %>"><%= user.username %></a></li><%
  }
}) %>
                </ul><!-- /.dropdown-menu -->
              </li><!-- /.dropdown -->
              <li class="dropdown">
                <a class="dropdown-toggle dropdown-submenu dropdown-submenu-close" data-toggle="dropdown" href="#">Admins</a>
                <ul class="dropdown-menu"><%
users.forEach(function(user) {
  if (user.is_admin && !user.is_suspended) { %>
                  <li class="item-green"><a href="/user/<%= user._id %>"><%= user.username %></a></li><%
  }
}) %>
                </ul><!-- /.dropdown-menu -->
              </li><!-- /.dropdown -->
              <li class="dropdown">
                <a class="dropdown-toggle dropdown-submenu dropdown-submenu-close" data-toggle="dropdown" href="#">Suspended</a>
                <ul class="dropdown-menu"><%
users.forEach(function(user) {
if (user.is_suspended) { %>
                  <li class="item-red"><a href="/user/<%= user._id %>"><%= user.username %></a></li><%
  }
}) %>
                </ul><!-- /.dropdown-menu -->
              </li><!-- /.dropdown -->
            </ul><!-- /.dropdown-menu -->
          </li><!-- /.dropdown -->
        </ul><!-- /.nav /.navbar-nav -->
<!-- end: user-list -->