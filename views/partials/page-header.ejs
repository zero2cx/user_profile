<% /* file: views/partials/page-header.ejs            */ %>

<! DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Profile</title>
    <link href="https://fonts.googleapis.com/css?family=Cabin:400,500,600,700" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropper/2.3.4/cropper.min.css" rel="stylesheet">
    <link href="/styles/user_profile.css" rel="stylesheet">
  </head>
  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">

        <div class="navbar-header">
          <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#collapsible-navbar" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button><!-- /.navbar-toggle -->
          <a class="navbar-brand" href="/">UserProfile</a>
        </div><!-- /.navbar-header -->

        <div class="collapse navbar-collapse" id="collapsible-navbar">
<% include ./user-list %>
          <ul class="nav navbar-nav navbar-right">
<% if (!currentUser) { %>
            <li style="margin-top: 3px;">
              <form class="navbar-form" action="/user/login" method="post">
                <span class="form-group">
                  <input type="text" style="max-width: 140px;" class="form-control input-sm horizontal-form" name="username" placeholder="username">
                </span><!-- /.form-group -->
                <span class="form-group">
                  <input type="password" style="max-width: 140px;" class="form-control input-sm horizontal-form" name="password" placeholder="password">
                </span><!-- /.form-group -->
                <button type="submit" class="btn btn-default btn-primary btn-xs btn-normalize">Log In</button>
              </form><!-- /.navbar-form -->
            </li><!-- -->
            <li><a href="/user/new">Sign Up</a></li>
<% } else { %>
            <li><a href="/user/<%= currentUser._id %>">Signed in as <%= currentUser.username %></a></li>
            <li><a href="/user/logout">Log Out</a></li>
  <% } %>
          </ul><!-- /.navbar-nav -->
        </div><!-- /.collapse -->
      </div><!-- /.container-fluid -->
    </nav><!-- /.navbar -->
